{
  "configurations": [
    {
      "name": "Ninja: Debug",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/ninja/debug/thermals",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}/ninja/debug",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        },
        {
          "description": "Set Disassembly Flavor to Intel",
          "text": "-gdb-set disassembly-flavor intel",
          "ignoreFailures": true
        }
      ],
      "preLaunchTask": "Build Debug",
      "miDebuggerPath": "/usr/bin/gdb"
    }
  ],
  "version": "2.0.0"
}
